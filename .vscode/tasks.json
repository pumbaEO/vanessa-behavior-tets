{
    "version": "0.1.0",
    "command": "oscript",
    "isShellCommand": true,
    "showOutput": "silent",
    "args": [
        "-encoding=utf-8", 
        "./tools/runner.os"
    ],
    "options": {
        "env": {
            "RUNNER_ENV":"production"
        }
    },

    "tasks": [
        {
            "taskName": "build",
            "isBuildCommand": true, 
            "isWatching": true, 
            "args": [
                "watch", 
                "compile.json"
            ], 
            "suppressTaskName": true

        },
        {
            "taskName": "test1", 
            "isTestCommand": true, 
            "args": [
                "vanessa", 
                "--path ./build/out/vanessa-behavior.epf",
                "--pathsettings ./tools/JSON/VBParams837UF.json" 

            ], 
            "showOutput": "always",
            "echoCommand": true, 
            "suppressTaskName": true

        },
        {
            "taskName": "compile",
            "args": [
                "compileepf",
                "./epf", 
                "./build/out/epf", 
                "--db-user base", 
                "--db-pwd 234567890"
            ],
            "echoCommand": true,
            "showOutput": "always",
            "suppressTaskName": true,
            "isBuildCommand": false
        }
    ]
}