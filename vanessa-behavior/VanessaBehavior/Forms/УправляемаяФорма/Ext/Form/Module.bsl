&НаКлиенте
Функция ФорматSRT(КолМС)
	Сек = Цел(КолМС / 1000);
	МС  = КолМС - Сек*1000; 
	
	Дат = '00010101';
	Дат = Дат + Сек;
	Время = Формат(Дат,"ДЛФ=T");
	Если Время = "" Тогда
		Время = "00:00:00";
	КонецЕсли;	 
	Если Сред(Время,2,1) = ":" Тогда
		Время = "0" + Время;
	КонецЕсли;	 
	
	
	МС = Строка(МС);
	Пока СтрДлина(МС) < 3 Цикл
		МС = МС + "0";
	КонецЦикла; 
	
	Стр = Время + "," + МС;
	
	Возврат Стр;
КонецФункции	

